{
    "name": "click-n-eat",
    "version": "1.0.0",
    "description": "Application use for inventroy and order mangement",
    "main": "index.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "lint": "npm run lint:js && npm run lint:scss",
        "lint:js": "eslint --quiet --ext .js,.jsx _restro/app _restro/server _consumer/app _consumer/server _server/src",
        "lint:scss": "stylelint --quiet \"**/*.scss\"",
        "lint:fix": "npm run lint:js:fix && npm run lint:scss:fix",
        "lint:js:fix": "eslint --quiet --ext .js,.jsx _restro/app _restro/server _consumer/app _consumer/server _server/src --fix",
        "lint:scss:fix": "stylelint \"**/*.scss\" --fix",
        "pretty": "prettier --write '{_restro/app, _restro/server,_consumer/app, _consumer/server}/**/*.{js,jsx,json,scss}'",
        "format": "prettier-eslint  --write '{_restro/app, _restro/server,_consumer/app, _consumer/server}/**/*.{js,jsx,json,scss}'"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint && lint-staged",
            "pre-push": "echo pushing....."
        }
    },
    "lint-staged": {
        "*.{js,jsx,json,scss}": [
            "prettier-eslint --write",
            "git add"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/arunesh-saxena/restro-app.git"
    },
    "keywords": [
        "resetro-app",
        "click-n-eat"
    ],
    "author": "Arunesh Saxena",
    "license": "ISC",
    "devDependencies": {
        "babel-eslint": "^10.0.1",
        "eslint": "^5.16.0",
        "eslint-config-airbnb": "^17.1.0",
        "eslint-plugin-import": "^2.17.3",
        "eslint-plugin-jsx-a11y": "^6.2.1",
        "eslint-plugin-react": "^7.13.0",
        "husky": "^2.4.1",
        "lint": "^0.7.0",
        "lint-staged": "^8.2.1",
        "prettier": "^1.18.2",
        "prettier-eslint": "^8.8.2",
        "prettier-eslint-cli": "^4.7.1",
        "stylelint": "^10.1.0",
        "stylelint-config-standard": "^18.3.0"
    },
    "dependencies": {
        "react": "^16.8.6"
    }
}
